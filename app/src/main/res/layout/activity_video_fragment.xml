<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoFragment">

    <TextView
        android:id="@+id/textView1p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Video"
        android:textColor="@color/unselected_color"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic"/>

    <ImageButton
        android:id="@+id/video_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="480dp"
        android:backgroundTint="#00FFFFFF"
        android:src="@drawable/blue_button_sub"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="148dp"
        android:layout_height="36dp"
        android:text="見守りスタート"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/video_start"
        app:layout_constraintEnd_toEndOf="@+id/video_start"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/video_start"
        app:layout_constraintTop_toTopOf="@+id/video_start"
        app:layout_constraintVertical_bias="0.547"
        tools:srcCompat="@tools:sample/backgrounds/scenic"/>

    <EditText
        android:id="@+id/logtext_exp"
        android:layout_width="260dp"
        android:layout_height="158dp"
        android:layout_marginTop="328dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:text="下のボタンをタップして\n見守りビデオを開始します。"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic"/>

</androidx.constraintlayout.widget.ConstraintLayout>
